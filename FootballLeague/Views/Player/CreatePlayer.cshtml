@model FootballLeague.Domain.Entities.Player
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dodawanie zawodnika</title>
</head>
<body>
    <div class ="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledy="createModalLabel" aria-hidde="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    @using (Html.BeginForm("Create", "Player", FormMethod.Post, new {@class = "form-horizontal"}))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <legend>
                                Dodaj zawodnika<button type="button" class="close" data-dismiss="modal" style="float:right;"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            </legend>
                        
                        <div class="form-group">
                            <label for="inputName" class="col-lg-2 control-label">Imię</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(player => player.FirstName, new
                                {
                                    @class="form-control",
                                    @id="inputName",
                                    @placeholder = "Imię",
                                    @autocomplete="off"
                                })
                            </div>
                        </div>
                            <div class="form-group">
                                <label for="inputLastName" class="col-lg-2 control-label">Nazwisko</label>
                                <div class="col-lg-10">
                                    @Html.TextBoxFor(player => player.LastName, new
                                    {
                                        @class="form-control",
                                        @id="inputLastName",
                                        @placeholder = "Nazwisko",
                                        @autocomplete="off"
                                    })

                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputPlayerClub" class="col-lg-2 control-label">Klub</label>
                                <div class="col-lg-10">
                                    @Html.ListBox("Club", (MultiSelectList)ViewBag.Clubs, new {id = "listBox", style = "color:black; width: auto; " })
                                </div>
                            </div>
                            
                             <div class="form-group">
                            <label for="inputPlayerPosition" class="col-lg-2 control-label">Pozycja</label>
                             <div class="col-lg-10">
                             @Html.ListBox("Position", (MultiSelectList)ViewBag.Positions, new {id = "listBox", style = "color:black; width: auto; " })
                             </div>
                        </div>

                            <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button class="btn btn-default" data-dismiss="modal">Zamknij</button>
                                <button type="submit" class="btn btn-primary">Zapisz</button>
                            </div>
                        </div>
                             </fieldset>
                    }
                </div>
                
            </div>
        </div>
        
    </div>
</body>
</html>
